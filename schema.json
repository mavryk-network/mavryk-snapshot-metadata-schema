{ "$schema": "http://json-schema.org/draft-04/schema",
"title": "Tezos Snapshots",
"description": "List of all available Tezos Snapshots",
  "type": "array",
  "items":
  {
    "type": "object",
    "description": "A single Tezos Snapshot",
    "required": [ "block_hash", "block_height", "block_timestamp", "filename", "url", "sha256", "filesize_bytes", "filesize", "tezos_version", "chain_name", "artifact_type" ],
    "Properties":
    {
      "block_hash": {
        "type": "string",
        "description": "A reference for a block in the Tezos blockchain.",
        "examples": [
          "BMHv8Rmx2QQtN786bUCuAxxemTmdJxaonbmUALifMYtivT13Hxg"
        ]
      },
      "block_height": { 
        "type": "integer",
        "description": "The number of blocks preceding this one in the blockchain",
        "examples": [
          23466334,
          345667223
        ]
      },
      "block_timestamp": {
         "type": "string" ,
         "description": "ISO 8601 timestamp of the current block UTC",
         "examples": [
          "2023-01-02T08:17:20Z"
         ]
      },
      "filename": {
        "type": "string",
        "examples": [
          "tezos-limanet-rolling-tarball-438782.lz4"
        ]
      },
      "url": {
        "type": "string",
        "description": "Reference to this file on the web",
        "examples": [
          "https://limanet-v15.xtz-shots.io/tezos-limanet-rolling-tarball-438782.lz4"
        ]
      },
      "sha256": {
        "type": "string",
        "description": "Hashed sum of file contents for checking data integrity.",
        "examples": [
          "7961409dad2b8ff917551eea4a5178c1a6d95a21f807f1020a34e3acedaaad4c"
        ]
      },
      "filesize_bytes": {
        "type": "integer",
        "examples": [
          53963264,
          234234
        ]
      },
      "filesize": {
        "type": "string",
        "description": "Size of file in kilobytes (K), megabytes (M), gigabytes (G) or terabytes (T)",
        "examples": [
          "6G",
          "51M"
        ]
      },
      "tezos_version": {
        "type": "object",
        "description": "Tezos version running on the node this data is from",
        "required": [ "version", "network_version", "commit_info" ],
        "Properties": {
          "version": {
            "type": "object",
            "required": [ "major", "minor", "additional_info" ],
            "Properties": {
              "major": {
                "type": "integer",
                "minimum": 7,
                "maximum": 99
              },
              "minor": {
                "type": "integer",
                "minimum": 0,
                "maximum": 99
              },
              "additional_info": {
                "type": "string"
              }
            }
          },
          "network_version": {
            "description": "A version number for the network protocol (includes distributed DB version and p2p version)",
            "type": "object",
            "required": [ "chain_name", "distributed_db_version", "p2p_version" ],
            "Properties": {
              "chain_name": {
                "type": "string"
              },
              "distributed_db_version": {
                "description": "A version number for the distributed DB protocol",
                "type": "integer",
                "minimum": 0,
                "maximum": 65535
              },
              "p2p_version": {
                "description": "A version number for the p2p layer.",
                "type": "integer",
                "minimum": 0,
                "maximum": 65535
              }
            }
          },
          "commit_info": {
            "required": [ "commit_hash", "commit_date" ],
            "Properties": {
              "commit_hash": {
                "type": "string"
              },
              "commit_date": {
                "type": "string"
              }
            }
          }
        }
      },
      "chain_name": {
        "type": "string",
        "description": "Name of Tezos blockchain- mainnet, or testnet.",
        "examples": [
          "mainnet",
          "ghostnet"
        ]
      }, 
      "history_mode": {
         "type": "string",
         "description": "Type of chain data contained in snapshot",
         "enum": ["archive", "rolling"]
        },
      "artifact_type": {
        "type": "string",
        "description": "Tarball or Tezos Snapshot",
        "enum": ["tarball", "tezos-snapshot"]
      },
      "snapshot_version": { 
        "type": "integer",
        "description": "Version of Octez snapshot format (.rolling). Tarball will not have a snapshot_version.",
        "examples": [
          5,
          4
        ]
      },
      "context_elements": {
        "type": "integer",
        "description": "Number of references to each preceding block's ledger state.",
        "examples": [
          23023,
          2342342
        ]
      }
    }
  }
}
